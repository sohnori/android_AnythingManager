<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5pt"
    >
    <LinearLayout        
        android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"    	
        >

        <TextView
            android:layout_width="@dimen/act1_dlgtxt_width"
            android:layout_height="wrap_content"
            android:text="인버터번호: "
            android:gravity="end" 
            />
        <Spinner
            android:id="@+id/act3spininvnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"             
            />

    </LinearLayout>
    <LinearLayout        
        android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"    	
        >
        <TextView            
            android:layout_width="@dimen/act1_dlgtxt_width"
    		android:layout_height="wrap_content"
    		android:text="아이디: "
    		android:gravity="end" 
            />
        <EditText 
            android:id="@+id/act3editinvid"
	        android:layout_width="@dimen/act1_dlgspin_width"
	        android:layout_height="wrap_content"	        	                
	        android:singleLine="true"	        
	        android:maxLength="3"	        
	        android:numeric="integer"
            />        
    </LinearLayout>
    <Space android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
    <TextView             
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="아이디값을 입력하지 않으면 FF로 설정됨."	        
            />
    <Space android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="16dp"/>
    <LinearLayout        
        android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"    	
        >
        <TextView            
            android:layout_width="@dimen/act1_dlgtxt_width"
    		android:layout_height="wrap_content"
    		android:text="인버터: "
    		android:gravity="end" 
            />
        <Spinner
	        android:id="@+id/act3spininvtype"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	        />
    </LinearLayout>
    <LinearLayout        
        android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"    	
        >
        <TextView            
            android:layout_width="@dimen/act1_dlgtxt_width"
    		android:layout_height="wrap_content"
    		android:text="모델(Phase): "
    		android:gravity="end" 
            />
        <Spinner
	        android:id="@+id/act3spininvphase"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	        />
    </LinearLayout>       
</LinearLayout>
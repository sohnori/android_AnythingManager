<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actp12"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#505050"    
    tools:context="com.daeeun.sohnori.anythingmanager.MyProcess12Activity" >
    
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:animateLayoutChanges="true"    
    	>
    	<FrameLayout
    	    android:id="@+id/act12frame"
    	    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
    	    />
    	<fragment 
    	        android:name="com.daeeun.sohnori.anythingmanager.MyProcess12Activity$CounterFragment"
    	        android:id="@+id/act12fragtest"
    	        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
    	        />
    	<fragment 
    	        android:name="com.daeeun.sohnori.anythingmanager.MyProcess12Activity$CounterFragment"
    	        android:id="@+id/act12fragtest2"
    	        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"		        
    	        />
    	<LinearLayout 
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"    
	    	>
		    <Button
		        android:id="@+id/act12btnhome"	
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="@string/mainpage"
		        />
		    <Button
		        android:id="@+id/act12btnfragadd"	
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="추가"
		        />
		    <Button
		        android:id="@+id/act12btnfragremove"	
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="제거"
		        />
		    <Button
		        android:id="@+id/act12btnfragreplace"	
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="재정렬"
		        />
		    <Button
		        android:id="@+id/act12btnfraghide"	
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="숨김"
		        />
		</LinearLayout> 	   	    
	</LinearLayout>	  
</ScrollView>
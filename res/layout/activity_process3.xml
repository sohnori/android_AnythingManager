<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actp3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#505050"
    android:focusable="true"
    android:focusableInTouchMode="true"   
    tools:context="com.daeeun.sohnori.anythingmanager.MyProcess3Activity" >
	
	<LinearLayout 
	    android:orientation="vertical"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"    
    	>
    	<LinearLayout 
    	    android:orientation="horizontal"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
    	    >    	        	   
    	    <TextView 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content" 
		        android:text="터미널: " 
		        android:textSize="20sp" 
		        android:textColor="#00ff00"             
	        	/>
    	    <Button
		        android:id="@+id/act3btnterminal"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="연결하고 누르시오."		        
		        />
    	</LinearLayout>
    	<GridLayout 
    	    android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:columnCount="5"
    	    >    	    		
		    <Button
		        android:id="@+id/act3btn1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="1"		        
		        />
		    <Button
		        android:id="@+id/act3btn2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="2"		        
		        />
		    <Button
		        android:id="@+id/act3btn3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="3"		        
		        />
		    <Button
		        android:id="@+id/act3btn4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="4"		        
		        />
		    <Button
		        android:id="@+id/act3btn5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="5"		        
		        />
		    <Button
		        android:id="@+id/act3btn6"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="6"		        
		        />
		    <Button
		        android:id="@+id/act3btn7"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="7"		        
		        />
		    <Button
		        android:id="@+id/act3btn8"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="8"		        
		        />
		    <Button
		        android:id="@+id/act3btn9"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="9"		        
		        />		    
		     <Button
		        android:id="@+id/act3btn10"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="10"
		        />
		     <Button
		        android:id="@+id/act3btn11"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="11"
		        />
		     <Button
		        android:id="@+id/act3btn12"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="12"
		        />
		     <Button
		        android:id="@+id/act3btn13"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="삭제"
		        />
		     <Button
		        android:id="@+id/act3btn14"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="정보"
		        />
		     <Button
		        android:id="@+id/act3btn15"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:onClick="mOnClick"
		        android:text="설정"
		        />    	    
    	</GridLayout>	    	   
	     <Space android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>
	     <ScrollView	            
	        android:orientation="vertical"
	   	 	android:layout_width="match_parent"
	    	android:layout_height="100dp"    	
	        >
	        <LinearLayout 
		        android:orientation="vertical"
		   	 	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
	        	>        
		        <EditText 
					android:id="@+id/act3editresult"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"						
					android:enabled="false"
					android:hint="결과창입니다."
					android:singleLine="false"				        	     
					android:background="#ffffff"
					android:ems="10"						            
					/>
	        </LinearLayout>
	    </ScrollView> 
		<Space android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp"/>    	       
	    <ScrollView
	        android:id="@+id/act3scrv"     
	        android:orientation="vertical"
	   	 	android:layout_width="match_parent"
	    	android:layout_height="match_parent"    	
	        >
	        <LinearLayout 
		        android:orientation="vertical"
		   	 	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
	        	>        
		        <EditText 
					android:id="@+id/act3editlog"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"			
					android:enabled="false"
					android:hint="로그창입니다."
					android:singleLine="false"			        	    
					android:background="#ffffff"
					android:ems="10"				              
			     	/>
	        </LinearLayout>
	     </ScrollView> 
	</LinearLayout>       
</LinearLayout>